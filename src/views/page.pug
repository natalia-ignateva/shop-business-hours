html
  head
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/@tailwindcss/ui@latest/dist/tailwind-ui.min.css')
    link(rel='preconnect', href='https://fonts.googleapis.com')
    link(rel='preconnect', href='https://fonts.gstatic.com', crossorigin)
    link(rel='stylesheet', href='https://fonts.googleapis.com/css2?family=Roboto:ital,wght@1,700&display=swap')
  body(style='background: linear-gradient( rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5) ), url("https://images.unsplash.com/photo-1445116572660-236099ec97a0?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1051&q=80")')
    .min-h-screen.flex.items-center.justify-center.py-12.px-4(class='sm:px-6 lg:px-8').font-sans

      .max-w-md.w-full
        div(class='sm:rounded-lg').bg-black.bg-opacity-50.p-3
          h2.mt-6.text-center.text-3xl.leading-9.font-extrabold.text-white
            | Welcome to Local Food!
          h3.mt-6.text-center.text-xl.leading-9.font-semibold.text-white.pb-10
            | We are open:
          .flex.flex-col
            .-my-2.py-2.overflow-x-auto(class='sm:-mx-6 sm:px-6 lg:-mx-8 lg:px-8')
              div
                table.min-w-full
                  tbody
                    each record in records
                      tr.mt-4
                        td.px-6.py-4.whitespace-no-wrap.border-b.border-gray-100.text-xl.leading-5.font-medium.text-white
                          | #{record.get('Day')}
                        td.px-6.py-4.whitespace-no-wrap.border-b.border-gray-100.text-xl.leading-5.font-medium.text-white.text-right
                          | #{record.get('Hours')}